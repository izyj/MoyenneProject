<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/fragmentformaddmatierefragment"
tools:context="navi.project.FormAddMatiereFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_nameMat"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
            android:layout_marginTop="93dp"
            android:width="150dp"
            android:hint="Nom" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_coefMat"
            android:layout_marginTop="41dp"
            android:width="150dp"
            android:hint="Coefficient"
            android:layout_below="@+id/et_nameMat"
            android:layout_alignLeft="@+id/et_nameMat"
            android:layout_alignStart="@+id/et_nameMat" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:id="@+id/btSaveMatiere"
            android:layout_below="@+id/et_coefMat"
            android:layout_alignLeft="@+id/et_coefMat"
            android:layout_alignStart="@+id/et_coefMat"
            style="@style/custom_bt_save"
            android:layout_marginTop="54dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ajouter une matiere"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_marginTop="39dp"
            android:layout_alignLeft="@+id/et_nameMat"
            android:layout_alignStart="@+id/et_nameMat"
            android:width="220dp"
            android:layout_marginLeft="-25dp" />
    </RelativeLayout>
</FrameLayout>
