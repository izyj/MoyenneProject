<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/fragmentformaddmatierefragment"
tools:context="navi.project.FormAddMatiereFragment">

    <RelativeLayout
        android:layout_width="265dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|top"
        android:minWidth="500dp">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/NomMatiere"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Matieres"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/NomCoef"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Coef"
                android:textAlignment="center"
                android:autoText="false"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/NomNotes"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Notes" />

            <TextView
                android:id="@+id/NomMoyenne"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Moyennes" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/moyenneGenerale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="18.6"

                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moyenneGeneraleNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/tb_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/header">
        </ListView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_gravity="right|center_vertical" />

    </RelativeLayout>

</FrameLayout>
