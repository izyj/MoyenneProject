<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_paper"
    tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle note"
        android:id="@+id/btNewNote"
        android:onClick="OC_BT_Add_Note"
        android:layout_below="@+id/btNewMatiere"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="9dp"
        style="@style/custom_bt"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle matiere"
        android:id="@+id/btNewMatiere"
        android:onClick="OC_BT_Add_Matiere"
        android:layout_marginTop="53dp"
        android:textSize="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btNewNote"
        android:layout_alignEnd="@+id/btNewNote"
        style="@style/custom_bt"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer tout"
        android:id="@+id/btDeleteAll"
        android:onClick="OC_BT_Delete_All"
        android:layout_marginTop="84dp"
        android:textSize="9dp"
        android:layout_below="@+id/btNewNote"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btNewNote"
        android:layout_alignEnd="@+id/btNewNote"
        style="@style/custom_bt_supr"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#1442ae"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btNewNote"
        android:layout_toEndOf="@+id/btNewNote"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_below="@+id/btDeleteAll"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view"
        android:layout_marginTop="43dp" />


</RelativeLayout>

