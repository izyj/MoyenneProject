<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/fragment_formaddnotefragment"
tools:context="navi.project.FormAddNoteFragment.xml">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_nameNot"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
            android:layout_marginTop="93dp"
            android:width="150dp"
            android:hint="Note  0 - 20 " />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_coefNot"
            android:width="150dp"
            android:hint="Coefficient"
            android:layout_below="@+id/et_nameNot"
            android:layout_alignLeft="@+id/et_nameNot"
            android:layout_alignStart="@+id/et_nameNot" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:id="@+id/btSaveNote"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/spinner"
            android:layout_alignRight="@+id/et_coefNot"
            android:layout_alignEnd="@+id/et_coefNot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ajouter une note"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_marginTop="39dp"
            android:layout_alignLeft="@+id/et_nameNot"
            android:layout_alignStart="@+id/et_nameNot"
            android:width="220dp"
            android:layout_marginLeft="-25dp"
            android:layout_alignRight="@+id/et_nameNot"
            android:layout_alignEnd="@+id/et_nameNot" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Choisir une matiere :"
            android:id="@+id/textView4"
            android:layout_above="@+id/spinner"
            android:layout_alignLeft="@+id/et_coefNot"
            android:layout_alignStart="@+id/et_coefNot" />

    </RelativeLayout>
</FrameLayout>
